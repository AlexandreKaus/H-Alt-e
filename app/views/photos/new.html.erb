<% photo_all = Photo.all.select do |pho| %>
<% pho.alternative == @alternative.id  %>
<% end %>

<% photo_all.each do |photo| %>
<h1><%= photo.name %></h1>
<h1><%= photo.detail %></h1>
<h1><%= photo.step %></h1>
<% end  %>




<div class="row justify-content-center">
  <div class="col-12 col-sm-8 col-md-6">
    <div class="form-container">
      <div class="form">
        <%= simple_form_for [@alternative, @photo] do |f| %>
        <%= f.input :name %>
        <%= f.input :detail %>
        <%= f.input :step %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn btn-primary2' %>
      <% end %>
      </div>
    </div>
  </div>

</div>

<h1>test</h1>
