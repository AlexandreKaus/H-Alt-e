<div class="container" style="margin-bottom: 150px;">
  <% unless @alternative.photos == [] %>
  <div class="box-stepcard" >
    <% count = 0 %>
    <% @alternative.photos.each do |photo| %>
    <div class="stepcard">
      <% count += 1 %>
      <h3><%= count %> - <%= photo.name %></h3>
      <div class="stepcard-text">
        <%= cl_image_tag photo.photo, crop: :fill, class: "step-img" %>
        <div class="ntm">
          <p><%= photo.detail %></p>
        </div>
      </div>
    </div>
    <% end %>
    <div class="formgrid">
      <h2>Add another step</h2>
      <%= simple_form_for [@alternative, @photo] do |f| %>
      <%= f.input :name %>
      <%= f.input :detail %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <div class="crtbtn">
      <%= f.submit "Add step", class: 'btn btn-primary' %>
      <%= f.submit "Create alternative", class: 'btn btn-primary' %>
    </div>
      <% end %>
    <% else %>
  <div class="row justify-content-left" style="margin-bottom: 150px; margin-top: 150px">
    <div class="col-4 col-sm-8 col-md-6">
      <div class="formgrid first-step">
        <div class="form">
          <h2>Add your first step</h2>
          <%= simple_form_for [@alternative, @photo] do |f| %>
          <%= f.input :name %>
          <%= f.input :detail %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <div class="crtbtn ">
          <%= f.submit "Add step", class: 'btn btn-primary' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
