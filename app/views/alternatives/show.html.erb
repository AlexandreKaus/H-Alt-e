<div class="container">
  <div class="about-container">
    <h1> <%= @alternative.title %> </h1>
    <div class="item-infos d-flex">
      <div class="group-item">
        <div class="left-infos">
          <img src="https://uvmbored.com/wp-content/uploads/2019/09/lip-balm.jpeg" alt="test-img">
          <div class="upvotes d-flex">
            <p>Good alternative</p>
            <%= link_to '', alternative_upvotes_path(@alternative.id), method: :post, class: 'btn u-vote-unactive'%>
            <p>Bad alternative</p>
            <%= link_to '', alternative_downvote_path(@alternative.id), method: :post, class: 'btn d-vote-unactive'%>
            <!-- route :  /alternatives/:alternative_id/upvotes/:id(.:format -->
          </div>
        </div>
        <div class="ingredients">
          <div class="diff-time d-flex">
            <p><%= @alternative.difficulty %></p>
            <p><%= @upvote_count - @downvote %></p>
          </div>
          <p><%= @alternative.ingredients %></p>
        </div>
      </div>
      <div class="description-right">
        <p>About</p>
        <p><%= @alternative.description %></p>
      </div>
    </div>
    <h3>Reviews</h3>
    <% if @alternative.reviews.empty? %>
    <p>Be the first to let a review</p>
    <% else %>
    <ul class="list-group">
      <% @alternative.reviews.each do |review| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="badge badge-primary badge-pill">
          <%= review.comment %>
          <%= review.created_at.humanized %>
        </li>
        <% end %>
      </ul>
    <% end %>  </div>
    <div class="white-line"></div>
    <div class="stepcard">
      <p>1<sup>st</sup> Step</p>
      <div class="desc-step d-flex">
        <img src="https://s3-us-west-2.amazonaws.com/lia-griffith-media/wp-content/uploads/2014/03/LipBalmIngredients.jpg" class="step-img">
        <p>In a small dish mix together the coconut oil, beeswax pellets, and almond oil.</p>
        <!-- AJOUTER STEP ICI A LA PLACE DU TEXT TEST-->
      </div>
    </div>
    <div class="white-line"></div>
    <div class="reviews-card">
      <p>Reviews</p>

      <%= render "reviews/new", cocktail: @cocktail, review: @review %>
    </div>
