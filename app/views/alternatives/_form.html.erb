<div class="container">
<div class="row justify-content-center">
  <div class="col-12 col-sm-8 col-md-6">
    <div class="form-container1">
      <% if alternative.new_record? %>
        <h1>Create a new alternative</h1>
      <% else %>
        <h1> Update your alternative </h1>
      <% end %>
      <div class="form">
        <%= simple_form_for alternative do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :ingredients, label: 'Ingredients (add by typing enter)' %>

       <div id="ingredients_placeholder"></div>
        <div id="alternative_ingredients_list"></div>

        <%= f.input :difficulty, default: 'Very easy', collection: ["Very easy","Easy","Moderate","Challenging","Hard"] %>
        <%= f.input :prep_time, as: :time, default: Time.parse('0:30') %>
        <%= f.input :alt_at, label: 'Alternative of'%>
        <div class="ligndiv d-flex">
        <div class="diffdiv"><%= f.input :difficulty, default: 'Very easy', collection: ["Very easy","Easy","Moderate","Challenging","Hard"] %></div>
        <div class="timediv"><%= f.input :prep_time, as: :time, default: Time.parse('0:30') %></div></div>
         <%= f.input :alt_at, label: 'Alternative of'%>
        <div id="alt_placeholder"></div>
        <div id="alternative_alt_list"></div>
        <%= f.input :pic, label: 'Picture' %>
        <%= f.input :pic_cache, as: :hidden %>
        <%= f.input :alimentation_list, label: "Alimentation", collection: $list_of_tags, as: :check_boxes %>
        <%= f.button :submit, class: 'btn btn-primary2' %>
      <% end %>
      </div>
    </div>
  </div>
</div>
</div>