<div class="row justify-content-center">
  <div class="col-12 col-sm-8 col-md-6">
    <div class="form-container">
      <% if alternative.new_record? %>
        <h1>Create a new alternative</h1>
      <% else %>
        <h1> Update your alternative </h1>
      <% end %>
      <div class="form">
        <%= simple_form_for alternative do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <p></p>
        <%= f.input :ingredients%>
        <div id="alternative_ingredients_list"></div>
        <%= f.input :difficulty %>
        <%= f.input :prep_time %>
        <%= f.input :alt_at %> <p></p>
        <div id="alternative_ingredients_list"></div>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.input :alimentation_list, label: "Alimentation",  collection: $list_of_tags, as: :check_boxes %>
        <%= f.button :submit, value: "", class: 'btn btn-primary2' %>
      <% end %>
      </div>
    </div>
  </div>
</div>

