<div class="dashcontainer">
  <h1><%= @user.username %>'s Dashboard</h1>
  <div id="dash-hds">My D.I.Y.'s :</div>
  <div class="dash-white-line"></div>
  <div class="box-mydiy">
    <% @alternatives_select.each do |alternative_select| %>
    <div class="mydiy-card d-flex">
      <img src="https://www.atelierdeschefs.com/media/recette-e23473-pommes-de-terre-facon-arrabbiata-et-gambas-au-basilic.jpg" class="maindash-img" alt="dash-pic">
      <div class="mydiy-opt">
        <p id="title-my"><%= alternative_select.title %></p>
        <div class="rest-diy">
          <%= link_to alternative_path(alternative_select), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_seed"></i> <p>Delete </p>
          <% end %>
          <%= link_to edit_alternative_path(alternative_select) do %>
          <i class="fa fa-edit edit_seed"></i> <p>Edit</p>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="dash-white-line"></div>
  <div class="gen-cont">
  <div class="bottom-container">
    <div id="dash-hds">My reviews</div>
    <div class="box-myrev">
      <!-- div class="dashoptions"> -->
      <% @reviews_select.each do |review_select| %>
      <div class="myrev-card d-flex">
        <img src="https://images.ricardocuisine.com/services/recipes/7446.jpg" class="dash-img" alt="dash-pic">
        <div class="myrev-opt">
          <p id="title-rvw"><%= review_select.alternative.title %></p>
          <p id="my-rev"><%= review_select.comment %></p>
        </div>
        <div class="rest-rev ml-auto">
          <%= link_to alternative_path(review_select), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_seed"></i>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <!-- <div class="vert-white-line"></div> -->
  <div class="fav-div"></div>
  </div>
</div>
